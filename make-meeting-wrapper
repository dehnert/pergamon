#!/usr/bin/python

import sys
import os

MAKE_MEETING_SCRIPT='/usr/local/bin/make-meeting-limited'

command = sys.argv[1]
if command == 'make-public-meeting':
    public = 'true'
else:
    public = 'false'

commandline = ['make-meeting-limited',
               '--public',
               public]

if len(sys.argv) == 4:
    commandline.extend(['--longname', sys.argv[3]])

commandline.append(sys.argv[2])

os.execv(MAKE_MEETING_SCRIPT, commandline)

